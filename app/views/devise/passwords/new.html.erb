<div class="login-form">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <h2 class="text-center">Forgot your password?</h2>   
    <div class="form-group">
      <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-user"></i></span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true, placeholder:"Enter Your Email" %>    
        </div>
    </div>
     
    <div class="form-group">
      <%= f.submit "Send me reset password instructions", :class => "btn btn-primary login-btn btn-block" %>
    </div>
    
  <% end %>
  <%= link_to "Log in", new_session_path(resource_name) %><br />
  <%= link_to "Sign up here!", new_registration_path(resource_name) %></p>
</div>